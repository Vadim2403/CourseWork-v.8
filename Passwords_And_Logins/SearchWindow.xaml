<Window x:Class="Passwords_And_Logins.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Passwords_And_Logins"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="UserWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="69"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="600"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <materialDesign:ColorZone
            Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
  Foreground="White"
  Mode="Accent"
  Padding="16">
            <StackPanel
    Orientation="Horizontal">
                <ToggleButton  Foreground="White"
      Style="{DynamicResource MaterialDesignHamburgerToggleButton}" />
                <TextBlock FontSize="15" FontWeight="Bold" Name="TextUserName"
      VerticalAlignment="Center"
      Margin="16 0 0 0">
                </TextBlock>
            </StackPanel>
        </materialDesign:ColorZone>
        <DataGrid CanUserSortColumns="False" Grid.Column="1" CanUserAddRows="False" Name="GridOFFindedaccounts" Width="600" HorizontalAlignment="Right" Grid.Row="1" >

        </DataGrid>

        <RadioButton Name="SearchBySiteName" VerticalAlignment="Top" Margin="0,30,0,0" FontSize="17" Content="Search by name" Grid.Row="1" Width="140" Foreground="Lime" HorizontalContentAlignment="Center"/>
        <RadioButton IsChecked="True" Name="SearchByLogin" VerticalAlignment="Top" Margin="0,70,0,0" FontSize="17" Content="Search by login" Grid.Row="1" Width="140" Foreground="Lime" HorizontalContentAlignment="Center"/>
        <RadioButton Name="SearchByPassword" VerticalAlignment="Top" Margin="0,110,0,0" FontSize="17" Content="Seatch by pass" Grid.Row="1" Width="140" Foreground="Lime" HorizontalContentAlignment="Center"/>
        <RadioButton Name="SearchByLink" VerticalAlignment="Top" Margin="0,150,0,0" FontSize="17" Content="Seatch by link" Grid.Row="1" Width="140" Foreground="Lime" HorizontalContentAlignment="Center"/>
        <RadioButton Name="SearchinDescription" VerticalAlignment="Top" Margin="0,190,0,0" FontSize="17" Content="Seatch in disc" Grid.Row="1" Width="140" Foreground="Lime" HorizontalContentAlignment="Center"/>
        <TextBox Name="SearchText" VerticalAlignment="Top" Margin="0,240,0,0" FontSize="17"  Grid.Row="1" Width="140" Foreground="Lime" HorizontalContentAlignment="Center"/>
        <Button Name="StartSearchBtn" Content="Search!" VerticalAlignment="Top" Margin="0,290,0,0" FontSize="17"  Grid.Row="1" Width="140" Foreground="White" HorizontalContentAlignment="Center" Click="StartSearchBtn_Click"/>
    </Grid>
</Window>