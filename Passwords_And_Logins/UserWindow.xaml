<Window x:Class="Passwords_And_Logins.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Passwords_And_Logins"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="UserWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="69"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <materialDesign:ColorZone
            Grid.Row="0"
  Foreground="White"
  Mode="Accent"
  Padding="16">
            <StackPanel
    Orientation="Horizontal">
                <ToggleButton  Foreground="White"
      Style="{DynamicResource MaterialDesignHamburgerToggleButton}" />
                <TextBlock FontSize="15" FontWeight="Bold" Name="TextUserName"
      VerticalAlignment="Center"
      Margin="16 0 0 0">
                </TextBlock>
            </StackPanel>
        </materialDesign:ColorZone>
        <DataGrid CanUserAddRows="False" Name="GridOFaccounts" Width="600" HorizontalAlignment="Right" Grid.Row="1" >
        </DataGrid>
    </Grid>
</Window>
